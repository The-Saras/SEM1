generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(OPERATOR)
  issuesLogged     Issue[]   @relation("LoggedBy")
  issuesVerified   Issue[]   @relation("VerifiedBy")
  createdAt DateTime @default(now())
}

enum Role {
  OPERATOR
  SUPERVISOR
}

model Machine {
  id           String   @id @default(uuid())
  machineCode  String   @unique
  name         String
  type         String
  location     String?
  issues       Issue[]
  createdAt    DateTime @default(now())
}

model Issue {
  id              String      @id @default(uuid())
  machineId       String
  machine         Machine     @relation(fields: [machineId], references: [id])
  
  description     String
  category        String?
  rootCause       String?
  correctiveAction String?
  resolution      String?
  
  status          IssueStatus @default(OPEN)
  
  loggedById      String
  loggedBy        User        @relation("LoggedBy", fields: [loggedById], references: [id])
  
  verifiedById    String?
  verifiedBy      User?       @relation("VerifiedBy", fields: [verifiedById], references: [id])
  
  images          IssueImage[]
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

enum IssueStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

model IssueImage {
  id        String   @id @default(uuid())
  issueId   String
  issue     Issue    @relation(fields: [issueId], references: [id])
  image     Bytes
  mimeType  String
  createdAt DateTime @default(now())
}



datasource db {
  provider = "postgresql"
}

